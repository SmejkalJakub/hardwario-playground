{
  "name": "bigclown-playground",
  "productName": "BigClown Playground",
  "author": {
    "name": "HARDWARIO s.r.o.",
    "email": "karel.blavka@hardwario.com",
    "url": "https://github.com/bigclownlabs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bigclownlabs/bch-playground.git"
  },
  "license": "MIT",
  "version": "0.11.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install": "electron-rebuild",
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "clean": "rm -rf ./builds ./dist",
    "webpack": "webpack --config webpack.build.config.js",
    "prod": "npm run webpack && electron --noDevServer .",
    "package-linux32": "npm run webpack && electron-builder build --linux --ia32",
    "package-linux64": "npm run webpack && electron-builder build --linux --x64",
    "package-linux-appimage": "npm run webpack && electron-builder build --linux AppImage",
    "package-win32": "npm run webpack && electron-builder build --win --ia32",
    "package-win64": "npm run webpack && electron-builder build --win --x64",
    "package-mac": "npm run webpack && electron-builder build --mac"
  },
  "build": {
    "productName": "BigClown Playground",
    "appId": "com.electron.bigclown-playground",
    "artifactName": "bigclown-playground-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/",
      "node_modules/",
      "src/",
      "index.js",
      "menu.js",
      "package.json",
      "resources/icon.*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "electronVersion": "4.0.3",
    "publish": null,
    "mac": {
      "artifactName": "bigclown-playground-${version}-macos-${arch}.${ext}",
      "category": "public.app-category.utilities"
    },
    "win": {
      "artifactName": "bigclown-playground-${version}-windows-${arch}.${ext}",
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "HARDWARIO s.r.o."
    },
    "linux": {
      "artifactName": "bigclown-playground-${version}-linux-${arch}.${ext}",
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "nsis": {
      "artifactName": "bigclown-playground-${version}-${os}-setup-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "ajv": "^6.5.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "bootstrap": "^4.1.3",
    "css-loader": "^1.0.0",
    "deep-equal": "^1.0.1",
    "electron": "^4.0.3",
    "electron-builder": "^20.43.0",
    "electron-json-config": "^1.5.3",
    "electron-packager": "^12.1.2",
    "electron-rebuild": "^1.8.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.4.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "shebang-loader": "0.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "aedes": "^0.36.0",
    "copy-to-clipboard": "^3.0.8",
    "electron-context-menu": "^0.10.0",
    "electron-prompt": "^1.2.0",
    "font-awesome": "^4.7.0",
    "ip": "^1.1.5",
    "is-port-reachable": "^2.0.0",
    "mqtt": "^2.18.8",
    "node-arp": "^1.0.6",
    "node-red": "^0.20.5",
    "node-red-contrib-blynk-ws": "^0.7.1",
    "node-red-contrib-ifttt": "^0.1.0",
    "node-red-dashboard": "*",
    "ping": "^0.2.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-select": "^1.2.1",
    "reactstrap": "^6.4.0",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "serialport": "^7.1.5",
    "sleep": "^5.2.3",
    "ubidots-nodered": "^1.1.0"
  }
}
