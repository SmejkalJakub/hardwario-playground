{
  "name": "bigclown-playground",
  "productName": "Bigclown Playground",
  "author": {
    "name": "Karel Blavka HARDWARIO s.r.o.",
    "email": "karel.blavka@hardwario.com",
    "url": "https://github.com/blavka"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bigclownlabs/bch-playground.git"
  },
  "license": "MIT",
  "version": "0.9.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "clean": "rm -rf ./builds ./dist",
    "webpack": "webpack --config webpack.build.config.js",
    "prod": "npm run webpack && electron --noDevServer .",
    "pack-osx": "npm run webpack && electron-packager ./ bch-playground --platform=darwin --arch=x64 --icon=./src/assets/icons/icon.icns --out=builds --overwrite",
    "pack-win32": "npm run webpack && electron-packager ./ bch-playground --platform=win32 --arch=ia32 --icon=./src/assets/icons/icon.ico --out=builds --asar --win32metadata.CompanyName='HARDWARIO s.r.o.' --win32metadata.ProductName='BigClown playground' --overwrite ",
    "pack-win64": "npm run webpack && electron-packager ./ bch-playground --platform=win32 --arch=x64 --icon=./src/assets/icons/icon.ico --out=builds --asar --win32metadata.CompanyName='HARDWARIO s.r.o.' --win32metadata.ProductName='BigClown playground' --overwrite ",
    "pack-linux32": "npm run webpack && electron-packager ./ bch-playground --platform=linux --arch=ia32 --icon=./src/assets/icons/icon.png --out=builds  --overwrite",
    "pack-linux64": "npm run webpack && electron-packager ./ bch-playground --platform=linux --arch=x64 --icon=./src/assets/icons/icon.png --out=builds  --overwrite",
    "package-linux": "npm run webpack && electron-builder build --linux",
    "package-win": "npm run webpack && electron-builder build --win --ia32",
    "package-mac": "npm run webpack && electron-builder build --mac"
  },
  "build": {
    "productName": "Bigclown Playground",
    "appId": "com.electron.bigclown-playground",
    "files": [
      "dist/",
      "node_modules/",
      "src/",
      "index.js",
      "menu.js",
      "package.json",
      "resources/icon.*"
    ],
    "dmg": {
      "contents": [{
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "publisherName": "HARDWARIO s.r.o."
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": null
  },
  "devDependencies": {
    "ajv": "^6.5.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "bootstrap": "^4.1.3",
    "css-loader": "^1.0.0",
    "deep-equal": "^1.0.1",
    "electron": "^2.0.6",
    "electron-builder": "^20.28.3",
    "electron-json-config": "^1.5.3",
    "electron-packager": "^12.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.0.3",
    "shebang-loader": "0.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "electron-context-menu": "^0.10.0",
    "electron-prompt": "^1.1.0",
    "font-awesome": "^4.7.0",
    "is-port-reachable": "^2.0.0",
    "mosca": "^2.8.3",
    "mqtt": "^2.18.3",
    "node-red": "*",
    "node-red-contrib-blynk-ws": "^0.7.1",
    "node-red-contrib-ifttt": "^0.1.0",
    "node-red-dashboard": "*",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^1.2.1",
    "reactstrap": "^6.3.1",
    "request": "^2.87.0",
    "request-progress": "^3.0.0",
    "serialport": "^7.0.2",
    "sleep": "^5.2.3",
    "ubidots-nodered": "^1.1.0"
  }
}